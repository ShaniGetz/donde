    <!--        android:datePickerMode="spinner"-->
    <!--        android:visibility="gone" />-->

    <EditText
        android:id="@+id/create_editText_event_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="minute (mm)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/create_editText_event_hour"
        app:layout_constraintTop_toTopOf="@id/create_editText_event_day" />


    <AutoCompleteTextView
        android:id="@+id/create_autoComplete_invited_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="invited user4"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@id/create_listView_invited_users"
        app:layout_constraintEnd_toStartOf="@id/create_editText_event_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_editText_event_day" />

    <Button
        android:id="@+id/create_button_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE EVENT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_listView_invited_users" />

    <Button
        android:id="@+id/create_button_debug_fill_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debug:\nautofill"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/create_button_create"
        app:layout_constraintTop_toTopOf="@id/create_button_create" />

</androidx.constraintlayout.widget.ConstraintLayout>
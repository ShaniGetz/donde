<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateEventActivity">

    <ProgressBar
        android:id="@+id/create_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Create Event"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/create_editText_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="event name"

        app:layout_constraintBottom_toTopOf="@+id/create_editText_event_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/create_editText_event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="event description"
        app:layout_constraintBottom_toTopOf="@id/create_searchView_location_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_editText_event_name" />

    <!--    <EditText-->
    <!--        android:id="@+id/create_editText_longitude"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:hint="longtitude"-->
    <!--        app:layout_constraintBottom_toTopOf="@id/create_editText_event_day"-->
    <!--        app:layout_constraintEnd_toStartOf="@id/create_editText_latitude"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/create_editText_location_name" />-->

    <!--    <EditText-->
    <!--        android:id="@+id/create_editText_latitude"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:hint="latitude"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toEndOf="@id/create_editText_longitude"-->
    <!--        app:layout_constraintTop_toTopOf="@id/create_editText_longitude" />-->

    <!--    <EditText-->
    <!--        android:id="@+id/create_editText_location_name"-->
    <!--        android:layout_width="wrap_content"-->

    <!--        android:layout_height="wrap_content"-->
    <!--        android:hint="location name"-->
    <!--        app:layout_constraintBottom_toTopOf="@id/create_editText_longitude"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/create_editText_event_description" />-->

    <SearchView
        android:id="@+id/create_searchView_location_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/create_mapView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_editText_event_description" />

    <!--TODO: make map height reactive (not a fixed height)-->

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/create_mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        app:layout_constraintBottom_toTopOf="@id/create_editText_event_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_searchView_location_search"
        tools:context=".map.MapsActivity" />

    <EditText
        android:id="@+id/create_editText_event_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="year"
        app:layout_constraintEnd_toStartOf="@id/create_editText_event_hour"
        app:layout_constraintStart_toEndOf="@id/create_editText_event_month"
        app:layout_constraintTop_toTopOf="@id/create_editText_event_day" />


    <EditText
        android:id="@+id/create_editText_event_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="month"
        app:layout_constraintEnd_toStartOf="@id/create_editText_event_year"
        app:layout_constraintStart_toEndOf="@id/create_editText_event_day"
        app:layout_constraintTop_toTopOf="@id/create_editText_event_day" />

    <EditText
        android:id="@+id/create_editText_event_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="day"
        app:layout_constraintBottom_toTopOf="@id/create_editText_invited_user1"
        app:layout_constraintEnd_toStartOf="@id/create_editText_event_month"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/create_mapView" />

    <EditText
        android:id="@+id/create_editText_event_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="hour (HH)"
        app:layout_constraintEnd_toEndOf="@+id/create_editText_event_minute"
        app:layout_constraintStart_toEndOf="@id/create_editText_event_year"

        app:layout_constraintTop_toTopOf="@id/create_editText_event_day" />

    <EditText
        android:id="@+id/create_editText_event_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="minute (mm)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/create_editText_event_hour"
        app:layout_constraintTop_toTopOf="@id/create_editText_event_day" />

    <!--    <androidx.recyclerview.widget.RecyclerView-->
    <!--        android:id="@+id/create_recyclerView_invited_users"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layout_constraintBottom_toTopOf="@id/create_button_create"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/create_editText_event_day" />-->
    <EditText
        android:id="@+id/create_editText_invited_user1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="invited user 1"
        app:layout_constraintBottom_toTopOf="@id/create_button_create"
        app:layout_constraintEnd_toStartOf="@+id/create_editText_invited_user2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_editText_event_day" />

    <EditText
        android:id="@+id/create_editText_invited_user2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="invited user 2"
        app:layout_constraintBottom_toTopOf="@id/create_button_create"
        app:layout_constraintEnd_toStartOf="@id/create_editText_invited_user3"
        app:layout_constraintStart_toEndOf="@id/create_editText_invited_user1"
        app:layout_constraintTop_toBottomOf="@id/create_editText_event_day" />


    <EditText
        android:id="@+id/create_editText_invited_user3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="invited user 3"
        app:layout_constraintBottom_toTopOf="@id/create_button_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/create_editText_invited_user2"
        app:layout_constraintTop_toBottomOf="@id/create_editText_event_day" />


    <Button
        android:id="@+id/create_button_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE EVENT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_editText_invited_user1" />

    <Button
        android:id="@+id/create_button_debug_fill_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debug:\nautofill"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/create_button_create"
        app:layout_constraintTop_toTopOf="@id/create_button_create" />

</androidx.constraintlayout.widget.ConstraintLayout>